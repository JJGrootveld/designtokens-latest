{
  "components/listbox": {
    "utrecht": {
      "listbox": {
        "background-color": {
          "$type": "color",
          "$value": "{basis.form-control.background-color}"
        },
        "border-color": {
          "$type": "color",
          "$value": "{basis.form-control.border-color}"
        },
        "border-radius": {
          "$type": "dimension",
          "$value": "{basis.form-control.border-radius}"
        },
        "border-width": {
          "$type": "dimension",
          "$value": "{basis.form-control.border-width}"
        },
        "color": {
          "$type": "color",
          "$value": "{basis.form-control.color}"
        },
        "padding-block-end": {
          "$type": "dimension",
          "$value": "0px"
        },
        "padding-block-start": {
          "$type": "dimension",
          "$value": "0px"
        },
        "padding-inline-end": {
          "$type": "dimension",
          "$value": "0px"
        },
        "padding-inline-start": {
          "$type": "dimension",
          "$value": "0px"
        },
        "hover": {
          "background-color": {
            "$type": "color",
            "$value": "{basis.form-control.hover.background-color}"
          },
          "color": {
            "$type": "color",
            "$value": "{basis.form-control.hover.color}"
          }
        },
        "option": {
          "padding-block-end": {
            "$type": "dimension",
            "$value": "{basis.space.block.sm}"
          },
          "padding-block-start": {
            "$type": "dimension",
            "$value": "{basis.space.block.sm}"
          },
          "padding-inline-end": {
            "$type": "dimension",
            "$value": "{basis.space.inline.sm}"
          },
          "padding-inline-start": {
            "$type": "dimension",
            "$value": "{basis.space.inline.sm}"
          },
          "is-active": {
            "background-color": {
              "$type": "color",
              "$value": "{basis.color.selected-inverse.bg-default}"
            },
            "color": {
              "$type": "color",
              "$value": "{basis.color.selected-inverse.color-default}"
            }
          },
          "active": {
            "background-color": {
              "$type": "color",
              "$value": "{basis.color.selected-inverse.bg-active}"
            },
            "color": {
              "$type": "color",
              "$value": "{basis.color.selected-inverse.color-active}"
            }
          },
          "disabled": {
            "background-color": {
              "$type": "color",
              "$value": "{basis.form-control.disabled.background-color}"
            },
            "color": {
              "$type": "color",
              "$value": "{basis.form-control.disabled.color}"
            }
          },
          "selected": {
            "background-color": {
              "$type": "color",
              "$value": "{basis.color.selected-inverse.bg-default}"
            },
            "color": {
              "$type": "color",
              "$value": "{basis.color.selected-inverse.color-default}"
            },
            "disabled": {
              "background-color": {
                "$type": "color",
                "$value": "{basis.form-control.disabled.color}"
              },
              "color": {
                "$type": "color",
                "$value": "{basis.form-control.disabled.background-color}"
              }
            },
            "hover": {
              "background-color": {
                "$type": "color",
                "$value": "{basis.color.selected-inverse.bg-hover}"
              },
              "color": {
                "$type": "color",
                "$value": "{basis.color.selected-inverse.color-hover}"
              }
            }
          }
        }
      }
    }
  }
}